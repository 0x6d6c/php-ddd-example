{
  "name": "codelytv/cqrs-ddd-example",
  "type": "project",
  "description": "A simple skeleton for CQRS code :)",
  "require": {
    "php": "^7.1",

    "ext-pdo": "*",
    "ext-apcu": "*",
    "ext-amqp": "*",

    "incenteev/composer-parameter-handler": "^2.1",

    "symfony/framework-bundle": "^4.2",
    "symfony/console": "^4.2",
    "symfony/process": "^4.2",
    "symfony/messenger": "^4.2",
    "symfony/monolog-bundle": "^3.3",
    "symfony/dotenv": "^4.2",

    "friendsofsymfony/rest-bundle": "^2.4",
    "jms/serializer-bundle": "^2.4",
    "symfony/twig-bundle": "^4.2",

    "doctrine/dbal": "^2.8",
    "doctrine/orm": "^2.6",

    "lambdish/phunctional": "^1.0",

    "swiftmailer/swiftmailer": "^5.4",
    "maknz/slack": "^1.7",

    "ramsey/uuid": "^3.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.5",
    "mockery/mockery": "^1.0",
    "fzaninotto/faker": "^1.7",
    "squizlabs/php_codesniffer": "^2.9",

    "behat/behat": "^3.4",
    "behat/mink": "^1.7",
    "behat/mink-extension": "^2.3",
    "behat/symfony2-extension": "^2.1",
    "behat/mink-browserkit-driver": "^1.3",
    "postcon/bootstrap-extension": "^1.1",
    "symfony/phpunit-bridge": "^4.2",
    "phpstan/phpstan": "^0.10.3",
    "phpstan/phpstan-mockery": "^0.10.2"
  },
  "scripts": {
    "post-install-cmd": ["Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"],
    "post-update-cmd": ["Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"]
  },
  "extra": {
    "incenteev-parameters": [
      { "file": "src/Shared/Infrastructure/Symfony/Bundle/DependencyInjection/Resources/infrastructure_parameters.yml"},
      { "file": "src/Context/Mooc/Infrastructure/Symfony/Bundle/DependencyInjection/Resources/mooc_parameters.yml" }
    ]
  },
  "autoload": {
    "psr-4": {
      "CodelyTv\\": ["applications/codely/src", "src"],
      "CodelyTv\\Api\\": "applications/api/src"
    },
    "files": [
      "src/utils.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "CodelyTv\\Test\\": "tests"
    },
    "files": [
      "tests/utils.php"
    ]
  }
}
